generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String
  role       Int
  companyId  Company  @relation(references: [id], fields: [company_id])
  company_id Int
  records    Record[]
  created_at  DateTime @default(now())

  @@map("users")
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String
  users     User[]
  records   Record[]
  created_at DateTime @default(now())

  @@map("companies")
}

model TypeRecord {
  id        Int      @id @default(autoincrement())
  name      String
  records   Record[]
  created_at DateTime @default(now())

  @@map("type_records")
}

model Record {
  id           Int        @id @default(autoincrement())
  typeRecordId TypeRecord @relation(references: [id], fields: [type_id])
  userId       User       @relation(references: [id], fields: [user_id])
  companyId    Company    @relation(references: [id], fields: [company_id])
  date         DateTime   @default(now())
  type_id      Int
  user_id      Int
  company_id   Int
  created_at    DateTime   @default(now())

  @@map("records")
}
